<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/swipe_layout_detail">



    <!--LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"-->

    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper_detail"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66ddff00">

            <ImageView
                android:id="@+id/edit_query_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_find_in_page_black_48" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66FF3300">

            <ImageView
                android:id="@+id/delete_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_delete_black_48" />
        </RelativeLayout>


    </LinearLayout>
    <!-- Bottom View End-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView android:text="test"
                android:id="@+id/detailItemtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/detailItemDecrypt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/detailItemCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/detailItemScan"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="scan"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>


    <!--/LinearLayout-->
</com.daimajia.swipe.SwipeLayout>