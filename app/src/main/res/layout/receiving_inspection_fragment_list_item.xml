<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/swipe_layout_receiving_inspection">

    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper_receiving_inspection"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66ddff00">

            <ImageView
                android:id="@+id/edit_query_receiving_inspection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_find_in_page_black_48" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66FF3300">

            <ImageView
                android:id="@+id/divide_receiving_inspection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/click" />
        </RelativeLayout>


    </LinearLayout>
    <!-- Bottom View End-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="10dp">

        <!--TextView
            android:id="@+id/productItemId"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"/-->
        <CheckBox
            android:id="@+id/checkBoxReceivingInspection"
            android:layout_width="36dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView android:text="test"
                android:id="@+id/receivingInspectionItemtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/receivingInspectionItemDecrypt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/receivingInspectionItemCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>








    </LinearLayout>



</com.daimajia.swipe.SwipeLayout>