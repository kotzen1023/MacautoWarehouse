<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:text="test"
            android:id="@+id/itemHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:paddingLeft="10dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/itemContentTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/itemContentEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:singleLine="true"
                android:gravity="center"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/itemContentSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            </Spinner>


        </LinearLayout>





    </LinearLayout>



</LinearLayout>