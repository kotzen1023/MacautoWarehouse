<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView android:text="test"
                android:id="@+id/detailItemtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/detailItemDecrypt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/detailItemCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="decrypt"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/detailItemScan"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="scan"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>