<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="test"
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_weight="2">
        </TextView>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/itemLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <EditText
                android:id="@+id/itemEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                android:layout_weight="1"

                />

            <Button
                android:id="@+id/itemConfirm"
                android:text="Ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
        </LinearLayout>



        <!--CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/checkBoxInRow"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_weight="8" /-->



    </LinearLayout>



</LinearLayout>